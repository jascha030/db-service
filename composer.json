{
  "name": "jascha030/db",
  "description": "Small set of interfaces serving as a thin layer on top of doctrine/dbal.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Jascha030",
      "email": "contact@jaschavanaalst.nl"
    }
  ],
  "keywords": [
    "Database",
    "SQL",
    "Abstraction-layer",
    "DB-management"
  ],
  "homepage": "https://github.com/jascha030",
  "bin": [],
  "autoload": {
    "psr-4": {
      "Jascha030\\DB\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jascha030\\DB\\": "tests"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "doctrine/dbal": "^4.2",
    "symfony/console": "^7.2",
    "symfony/process": "^7.2"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8.2",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^7.2"
  },
  "config": {
    "platform-check": false,
    "platform": {
      "php": "8.2"
    },
    "sort-packages": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": true,
      "forward-command": true
    }
  },
  "scripts": {
    "php-cs-fixer": "tools/php-cs-fixer",
    "phpunit": "tools/phpunit.phar",
    "phpstan": "vendor-bin/phpstan/vendor/bin/phpstan",
    "format": "@php-cs-fixer fix --config=.php-cs-fixer.dist.php",
    "analyze": "@phpstan analyze -c phpstan.neon.dist",
    "analyze:baseline": "@analyze --generate-baseline",
    "test": [
      "@tools:install",
      "@putenv XDEBUG_MODE=coverage",
      "@phpunit -c phpunit.xml.dist"
    ],
    "tools:install": [
      "@putenv XDEBUG_MODE=off",
      "@putenv COMPOSER_ALLOW_SUPERUSER=1",
      "phive install --trust-gpg-keys 4AA394086372C20A,E82B2FB314E9906E,C00543248C87FB13 1> /dev/null",
      "@php -r \" ! file_exists('tools/phpunit.xsd') && (new Phar('tools/phpunit.phar'))->extractTo('tools', 'phpunit.xsd');\""
    ]
  }
}

{
    "name": "jascha030/db",
    "description": "Small set of interfaces serving as a thin layer on top of doctrine/dbal.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jascha030",
            "email": "contact@jaschavanaalst.nl"
        }
    ],
    "keywords": [
        "Database",
        "SQL",
        "Abstraction-layer",
        "DB-management"
    ],
    "homepage": "https://github.com/jascha030",
    "config": {
        "platform-check": false,
        "platform": {
            "php": "8.0.2"
        },
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "bin": [],
    "autoload": {
        "psr-4": {
            "Jascha030\\DB\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jascha030\\DB\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~8.0||~8.1||~8.2",
        "doctrine/dbal": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v3.8.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "4.4|^5.4|^6.0",
        "vlucas/phpdotenv": "^5.4",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "suggest": {
        "php-di/php-di": "^6.0"
    },
    "extra": {},
    "scripts": {
        "php-cs-fixer": "tools/php-cs-fixer",
        "phpstan": "tools/phpstan",
        "phpunit": "tools/phpunit",
        "rector": "vendor/bin/rector",
        "format": "@php-cs-fixer fix --config=.php-cs-fixer.php",
        "test": "@phpunit -c phpunit.xml",
        "analyze": "@phpstan analyze -c phpstan.neon",
        "fix:dry": "@rector process src --dry-run",
        "fix": "@rector process src"
    }
}

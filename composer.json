{
    "name": "jascha030/db",
    "description": "Small set of interfaces serving as a thin layer on top of doctrine/dbal.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jascha030",
            "email": "contact@jaschavanaalst.nl"
        }
    ],
    "keywords": [
        "Database",
        "SQL",
        "Abstraction-layer",
        "DB-management"
    ],
    "homepage": "https://github.com/jascha030",
    "bin": [],
    "autoload": {
        "psr-4": {
            "Jascha030\\DB\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jascha030\\DB\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~8.0||~8.1||~8.2",
        "doctrine/dbal": "^3.6",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "4.4|^5.4|^6.0.19",
        "vlucas/phpdotenv": "^5.5",
        "bamarni/composer-bin-plugin": "^1.8.2"
    },
    "config": {
        "platform-check": false,
        "platform": {
            "php": "8.0.2"
        },
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true
        }
    },
    "scripts": {
        "php-cs-fixer": "tools/php-cs-fixer",
        "phpunit": "tools/phpunit.phar",
        "phpstan": "vendor-bin/phpstan/vendor/bin/phpstan",
        "format": "@php-cs-fixer fix -c .php-cs-fixer.dist.php",
        "test": "@phpunit -c phpunit.xml.dist",
        "analyze": "@phpstan analyze -c phpstan.neon.dist",
        "analyze:baseline": "@analyze --generate-baseline",
    }
}

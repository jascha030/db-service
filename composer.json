{
    "name": "jascha030/db",
    "description": "Small set of interfaces serving as a thin layer on top of doctrine/dbal.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jascha030",
            "email": "contact@jaschavanaalst.nl"
        }
    ],
    "keywords": [
        "Database",
        "SQL",
        "Abstraction-layer",
        "DB-management"
    ],
    "homepage": "https://github.com/jascha030",
    "config": {},
    "bin": [],
    "autoload": {
        "psr-4": {
            "Jascha030\\DB\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jascha030\\DB\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0.0|^8.1",
        "doctrine/dbal": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v3.8.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "4.4|^5.4|^6.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "suggest": {
        "php-di/php-di": "^6.0"
    },
    "extra": {},
    "scripts": {
        "phpunit": "phpunit -c .phpunit.xml",
        "php-cs-fixer": "php-cs-fixer fix --config .php-cs-fixer.php",
        "test": "@phpunit",
        "format": "@php-cs-fixer"
    },
    "scripts-descriptions": {
        "test": "Runs phpunit with .phpunit.xml",
        "format": "Runs php-cs-fixer with .php-cs-fixer.php."
    }
}
